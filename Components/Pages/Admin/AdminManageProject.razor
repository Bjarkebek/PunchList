@page "/admin/projects/{projectId:int}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using PunchList.Services
@using PunchList.Models
@using System.ComponentModel.DataAnnotations
@inject IProjectService ProjectService
@inject ITaskItemService TaskItemService
@inject ISubTaskItemService SubTaskItemService
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]

<div class="mt-3">
    <a class="btn btn-outline-secondary" href="/admin/projects">← Back </a>
</div>


@if (isLoading)
{
    <p>Loading...</p>
}
else if (project is null)
{
    <div class="alert alert-warning">Project not found.</div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="flex-grow-1">
            @if (!isEditingProject)
            {
                <div>
                    <h4 class="mb-0">@project.Name</h4>
                    @if (!string.IsNullOrWhiteSpace(project.Description))
                    {
                        <div class="text-muted">@project.Description</div>
                    }
                </div>
            }
            else
            {
                <EditForm EditContext="@ProjectEditContext" OnValidSubmit="@UpdateProject">
                    <DataAnnotationsValidator />
                    <div class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Project name</label>
                            <InputText class="form-control" @bind-Value="editProject.Name" />
                            <ValidationMessage For="@(() => editProject.Name)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Project description</label>
                            <InputText class="form-control" rows="1" @bind-Value="editProject.Description" />
                        </div>
                        <div class="col-md-2 d-flex gap-2">
                            <button class="btn btn-primary" type="submit">Save</button>
                            <button class="btn btn-outline-secondary" type="button" @onclick="CancelEditProject">Cancel</button>
                        </div>
                    </div>
                </EditForm>
            }
        </div>
        <div class="ms-3 d-flex gap-2">
            @if (!isEditingProject)
            {
                <button class="btn btn-outline-secondary" @onclick="OpenEditProject">Edit</button>
            }
            @if (!isEditingProject)
            {
                <button class="btn btn-outline-danger"  @onclick="DeleteProject">Delete Project</button>
            }
        </div>
    </div>
    <hr />

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger">@error</div>
    }

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center" style="cursor:pointer;" @onclick="ToggleCardBox">
            <span class="fw-semibold">Add Task</span>
            <button class="btn btn-outline-hidden" 
                @onclick:stopPropagation="true" 
                @onclick="ToggleCardBox">
                @(IsExpanded ? "▾" : "▸")
            </button>
        </div>
        @if (IsExpanded)
        {
            <div class="card-body">
                <EditForm EditContext="@ToggleCard" OnValidSubmit="@CreateTaskAsync">
                    <DataAnnotationsValidator />
                    <div class="row g-2">
                        <div class="col-md-4">
                            <label class="form-label">Title</label>
                            <InputText class="form-control" @bind-Value="newTask.Title" />
                            <ValidationMessage For="@(() => newTask.Title)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Description</label>
                            <InputText class="form-control" @bind-Value="newTask.Description" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Due</label>
                            <InputDate class="form-control" @bind-Value="newTask.DueDate" />
                        </div>
                    </div>
                    <div class="mt-2 d-flex gap-2">
                        <button class="btn btn-primary" type="submit">Add Task</button>
                        <button class="btn btn-outline-secondary" type="button" @onclick="CancelAddTask">Cancel</button>
                    </div>
                </EditForm>
            </div>
        }
    </div>

    @if (tasks.Count == 0)
    {
        <p class="text-muted">No tasks.</p>
    }
    else
    {
        @foreach (var t in tasks.OrderBy(t => t.DueDate))
        {
            <div class="card mb-2">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="me-3">
                            @if (IsTaskEditing(t.Id))
                            {
                                var editModel = editTasks[t.Id];
                                <EditForm Model="@editModel" OnValidSubmit="@(() => UpdateTask(t.Id))">
                                    <DataAnnotationsValidator />
                                    <div class="row g-2 align-items-end">
                                        <div class="col-md-4">
                                            <label class="form-label">Title</label>
                                            <InputText class="form-control" @bind-Value="editModel.Title" />
                                            <ValidationMessage For="@(() => editModel.Title)" />
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Description</label>
                                            <InputText class="form-control" @bind-Value="editModel.Description" />
                                            <ValidationMessage For="@(() => editModel.Description)" />
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">Due</label>
                                            <InputDate class="form-control" @bind-Value="editModel.DueDate" />
                                        </div>
                                        <div class="col-md-1 d-flex gap-2">
                                            <button class="btn btn-primary" type="submit">Save</button>
                                            <button class="btn btn-outline-secondary" type="button" @onclick="() => CancelEditTask(t.Id)">Cancel</button>
                                        </div>
                                    </div>
                                </EditForm>
                            }
                            else{
                                <h4 class="fw-bold">@t.Title</h4>
                                @if (!string.IsNullOrWhiteSpace(t.Description))
                                {
                                    <h5 class="text-muted small">@t.Description</h5>
                                }
                                @if (t.DueDate.HasValue)
                                {
                                    <span class="text-muted small">Due: @t.DueDate.Value.ToShortDateString()</span>
                                }
                            }


                            
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge @(t.Status == PunchList.Models.TaskStatus.Completed ? "status-completed" : t.Status == PunchList.Models.TaskStatus.InProgress ? "status-inprogress" : "status-new")">@t.Status</span>
                            @if (!IsTaskEditing(t.Id) && IsTaskExpanded(t.Id))
                            {
                                <button class="btn btn-outline-secondary" @onclick="() => OpenEditTask(t)">Edit</button>
                            }
                            @if (!IsTaskEditing(t.Id))
                            {
                                <button class="btn btn-outline-secondary" @onclick="() => ToggleTask(t.Id)">
                                    @(IsTaskExpanded(t.Id) ? "Hide ▾" : "Show ▸")
                                </button>
                            }
                        </div>
                    </div>

                    @if (IsTaskExpanded(t.Id) && !IsTaskEditing(t.Id))
                    {
                        <hr class="mt-3" />
                        <div class="d-flex justify-content-between">
                            <div class="fw-semibold">Sub tasks:</div>
                            <div class="d-flex gap-2 mr-4">
                                <input class="form-control form-control-sm" style="width:240px" placeholder="New subtask title"
                                       @bind="newSubTaskTitle[t.Id]" @bind:event="oninput" />
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick="@(() => AddSubTask(t.Id))"
                                        disabled="@(!newSubTaskTitle.ContainsKey(t.Id) || string.IsNullOrWhiteSpace(newSubTaskTitle[t.Id]))">
                                    Add
                                </button>
                            </div>
                        </div>

                        @if (t.SubTasks?.Any() == true)
                        {
                            <ul id="subtasks-@t.Id" class="list-group list-group-flush mt-2">
                                @foreach (var st in t.SubTasks.OrderBy(s => s.Order))
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div class="d-flex align-items-center gap-2">
                                            <input type="checkbox"
                                                   checked="@st.IsDone"
                                                   @onchange="() => SubTaskItemService.ToggleSubTaskAsync(t.Id, st.Id)" />
                                            <span>@st.Title</span>
                                        </div>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeleteSubTask(st.Id))" >Delete</button>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-muted small mt-2">No subtasks.</div>
                        }

                        <div class="d-flex gap-2 mt-4">
                            <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeleteTask(t.Id))" >Delete Task</button>
                        </div>
                    }
                </div>
            </div>
        }
    }
}

@code {
    [Parameter] public int projectId { get; set; }

    private Project? project;
    private List<TaskItem> tasks = new();

    private bool isLoading = true;
    private string? error;



    private NewTaskModel newTask = new();

    private sealed class NewTaskModel
    {
        [Required, StringLength(200)]
        public string? Title { get; set; }
        [StringLength(2000)]
        public string? Description { get; set; }
        public DateTime? DueDate { get; set; }
    }

    // Edit project fields
    private bool isEditingProject = false;
    private ProjectEditModel editProject = new();

    private sealed class ProjectEditModel
    {
        [Required, StringLength(200)]
        public string? Name { get; set; }
        [StringLength(1000)]
        public string? Description { get; set; }
    }

    // Edit task fields
    private sealed class EditTaskModel
    {
        [Required, StringLength(200)]
        public string? Title { get; set; }
        [StringLength(2000)]
        public string? Description { get; set; }
        public DateTime? DueDate { get; set; }
    }

    private readonly Dictionary<int, string> newSubTaskTitle = new(); // if creating multiple subtask simultaneously

    // Track which tasks are being edited and their models
    private readonly HashSet<int> editingTaskIds = new();
    private readonly Dictionary<int, EditTaskModel> editTasks = new();

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
        isLoading = false;
    }

    private async Task ReloadAsync()
    {
        project = await ProjectService.GetProjectByIdAsync(projectId);
        tasks = project?.Tasks?.ToList() ?? new List<TaskItem>();
        foreach (var t in tasks)
        {
            newSubTaskTitle.TryAdd(t.Id, string.Empty);
            if (!editTasks.ContainsKey(t.Id))
                editTasks[t.Id] = new EditTaskModel { Title = t.Title, Description = t.Description, DueDate = t.DueDate };
        }
        StateHasChanged();
    }

    private async Task CreateTaskAsync()
    {
        try
        {
            var ti = new TaskItem
            {
                ProjectId = projectId,
                Title = newTask.Title!.Trim(),
                Description = string.IsNullOrWhiteSpace(newTask.Description) ? null : newTask.Description!.Trim(),
                Status = PunchList.Models.TaskStatus.New,
                Order = 0,
                DueDate = newTask.DueDate
            };

            var created = await TaskItemService.CreateTask(ti);
            if (created is null)
            {
                error = "Failed to create task.";
                return;
            }

            newTask = new();
            ToggleCard = new EditContext(newTask); // reset validation state
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            error = $"Error adding task: {ex.Message}";
        }
    }

    private async Task DeleteProject()
    {
        try
        {
            if (project is null) return;
            await ProjectService.DeleteProjectAsync(project);
            // navigate away after deletion
            NavigationManager.NavigateTo("/admin/projects");
        }
        catch (Exception ex)
        {
            error = $"Error deleting project: {ex.Message}";
        }
    }

    private async Task DeleteTask(int taskId)
    {
        try
        {
            await TaskItemService.DeleteTask(taskId);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            error = $"Error deleting task: {ex.Message}";
        }
    }

    private async Task AddSubTask(int taskId)
    {
        try
        {
            newSubTaskTitle.TryGetValue(taskId, out var title);
            await SubTaskItemService.CreateAsync(taskId, title);
            newSubTaskTitle[taskId] = string.Empty;
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            error = $"Error adding subtask: {ex.Message}";
        }
    }

    private async Task DeleteSubTask(int subTaskId)
    {
        try
        {
            await SubTaskItemService.DeleteAsync(subTaskId);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            error = $"Error deleting subtask: {ex.Message}";
        }
    }

    // Task editing
    private bool IsTaskEditing(int taskId) => editingTaskIds.Contains(taskId);

    private void OpenEditTask(TaskItem t)
    {
        editTasks[t.Id] = new EditTaskModel { Title = t.Title, Description = t.Description, DueDate = t.DueDate };
        editingTaskIds.Add(t.Id);
        expandedTaskIds.Add(t.Id);
    }

    private void CancelEditTask(int taskId)
    {
        var t = tasks.FirstOrDefault(x => x.Id == taskId);
        if (t is not null)
            editTasks[taskId] = new EditTaskModel { Title = t.Title, Description = t.Description };
        editingTaskIds.Remove(taskId);
    }

    private async Task UpdateTask(int taskId)
    {
        try
        {
            if (!editTasks.TryGetValue(taskId, out var model) || string.IsNullOrWhiteSpace(model.Title))
            {
                error = "Title is required.";
                return;
            }

            await TaskItemService.UpdateTask(
                taskId,
                model.Title.Trim(),
                string.IsNullOrWhiteSpace(model.Description) ? null : model.Description.Trim(),
                model.DueDate
            );

            editingTaskIds.Remove(taskId);
            error = null;
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            error = $"Error updating task: {ex.Message}";
        }
    }

    // Toggles Tasks cards
    private readonly HashSet<int> expandedTaskIds = new();

    private bool IsTaskExpanded(int taskId) => expandedTaskIds.Contains(taskId);

    private void ToggleTask(int taskId)
    {
        if (!expandedTaskIds.Remove(taskId))
            expandedTaskIds.Add(taskId);
    }


    // Toggles Card
    private EditContext? ToggleCard;

    private bool IsExpanded = false;

    private void ToggleCardBox()
    {
        if (IsExpanded)
            CancelAddTask();
        else
            OpenAddTask();
    }

    private void OpenAddTask()
    {
        IsExpanded = true;
        ToggleCard = new EditContext(newTask);
    }

    private void CancelAddTask()
    {
        newTask = new();
        ToggleCard = new EditContext(newTask); // clears validation messages
        IsExpanded = false;
    }

    // Project edit
    private async Task UpdateProject()
    {
        try
        {
            if (project is null) return;

            project.Name = editProject.Name!.Trim();
            project.Description = string.IsNullOrWhiteSpace(editProject.Description)
                ? null
                : editProject.Description!.Trim();

            await ProjectService.UpdateProjectAsync(project);
            isEditingProject = false;
            error = null;
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            error = $"Error saving project: {ex.Message}";
        }
    }

    private void OpenEditProject()
    {
        if (project is null) return;
        editProject = new ProjectEditModel
        {
            Name = project.Name,
            Description = project.Description
        };
        ProjectEditContext = new EditContext(editProject);
        isEditingProject = true;
    }

    private void CancelEditProject()
    {
        if (project is null) return;
        editProject = new ProjectEditModel
        {
            Name = project.Name,
            Description = project.Description
        };
        ProjectEditContext = new EditContext(editProject); // clears validation messages
        isEditingProject = false;
    }

    // Edit context for project edit form
    private EditContext? ProjectEditContext;
}
