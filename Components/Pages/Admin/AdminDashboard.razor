@page "/admin"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<h3 class="mt-5">Admin Dashboard</h3>
<hr class="mb-4" />

<div class="row g-4">
    <div class="col-12 col-lg-6">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Show Projects</h5>
                <p class="text-muted">Browse all projects and open any project.</p>
                <div class="mt-auto">
                    <a class="btn btn-primary" href="/admin/projects">Open</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-6">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Manage Users</h5>
                <p class="text-muted">View users and manage Admin role assignments.</p>
                <div class="mt-auto">
                    <a class="btn btn-primary" href="/admin/users">Open</a>
                </div>
            </div>
        </div>
    </div>
</div>
